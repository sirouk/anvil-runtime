{
  "name": "anvil-nextjs-bridge",
  "version": "0.1.0",
  "description": "A NextJS bridge that enables Anvil apps to run with enhanced deployment capabilities",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "build:lib": "tsc -p tsconfig.lib.json",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:report": "playwright show-report",
    "test:e2e:connectivity": "playwright test tests/e2e/01-basic-connectivity.e2e.test.ts",
    "test:e2e:workflows": "playwright test tests/e2e/02-anvil-app-workflows.e2e.test.ts",
    "test:e2e:protocol": "playwright test tests/e2e/03-protocol-compliance.e2e.test.ts",
    "test:e2e:performance": "playwright test tests/e2e/04-performance-benchmarks.e2e.test.ts",
    "test:all": "npm run test && npm run test:e2e",
    "test:ci": "npm run lint && npm run type-check && npm run test:coverage && npm run test:e2e",
    "test:auto": "node tools/automated-test-runner.js",
    "test:with-server": "node tools/test-with-anvil-server.js",
    "test:visual": "node tools/visual-regression-tester.js test",
    "test:visual:baseline": "node tools/visual-regression-tester.js baseline",
    "test:performance": "node tools/performance-benchmarker.js",
    "pre-commit": "lint-staged",
    "prepare": "husky",
    "type-check": "tsc --noEmit",
    "quality-check": "npm run type-check && npm run lint && npm run format:check",
    "quality-fix": "npm run type-check && npm run lint:fix && npm run format",
    "security:audit": "npm audit --audit-level moderate",
    "security:fix": "npm audit fix",
    "ws-bridge": "node server/websocket-server.js",
    "dev:full": "concurrently \"npm run ws-bridge\" \"npm run dev\"",
    "test:ws": "node -e \"const AnvilTrafficLogger = require('./tools/websocket-logger'); const logger = new AnvilTrafficLogger('ws://localhost:3001'); logger.startCapture(); setTimeout(() => logger.disconnect(), 3000);\""
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@mui/icons-material": "^7.2.0",
    "@mui/material": "^7.2.0",
    "@tanstack/react-query": "^5.83.0",
    "@types/ws": "^8.18.1",
    "axios": "^1.10.0",
    "form-data": "^4.0.4",
    "js-yaml": "^4.1.0",
    "next": "15.4.3",
    "plotly.js-dist-min": "^3.0.3",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.28.0",
    "@babel/preset-react": "^7.27.1",
    "@babel/preset-typescript": "^7.27.1",
    "@eslint/eslintrc": "^3",
    "@playwright/test": "^1.54.1",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.4.3",
    "husky": "^9.1.7",
    "jest": "^30.0.5",
    "jest-environment-jsdom": "^30.0.5",
    "lint-staged": "^16.1.2",
    "playwright": "^1.54.1",
    "prettier": "^3.6.2",
    "puppeteer": "^23.0.0",
    "tailwindcss": "^4",
    "typescript": "^5"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yaml,yml}": [
      "prettier --write"
    ]
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false
  }
}
